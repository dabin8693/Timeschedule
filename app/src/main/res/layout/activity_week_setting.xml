<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MakeSchedule_day_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/appbar_week_setting"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/cardview_light_background"
                app:title="주간 시간표 설정"
                >

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="안내 : 지난요일은 지나간 요일을 어떻게 보여줄지를 결정합니다."></TextView>
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/week_text_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지난요일"
                android:textSize="20sp"></TextView>
            <RadioGroup
                android:id="@+id/week_group_0"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/week_before"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과거">

                </RadioButton>
                <RadioButton
                    android:id="@+id/week_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미래">

                </RadioButton>
            </RadioGroup>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/week_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="요일설정"
                android:textSize="20sp"></TextView>
            <Spinner
                android:id="@+id/week_setting_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"></Spinner>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/week_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시간단위"
                android:textSize="20sp"></TextView>
            <RadioGroup
                android:id="@+id/week_group"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/week_60"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한시간 간격">

                </RadioButton>
                <RadioButton
                    android:id="@+id/week_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삼십분 간격">

                </RadioButton>
            </RadioGroup>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/week_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작시간"
                android:textSize="20sp"></TextView>
            <TextView
                android:id="@+id/week_setting_start"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00~10:00"
                android:textSize="20sp"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/week_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종료시간"
                android:textSize="20sp"></TextView>
            <TextView
                android:id="@+id/week_setting_end"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:00~21:00"
                android:textSize="20sp"></TextView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>